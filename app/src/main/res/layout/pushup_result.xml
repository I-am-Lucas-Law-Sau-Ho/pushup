<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:gravity="center"
        android:id="@+id/push_up_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Training result"
        android:textSize="50sp"
        />

    <TextView
        android:gravity="center"
        android:id="@+id/result_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completed numbers"
        android:textSize="50sp"
        />

    <TextView
        android:gravity="center"
        android:id="@+id/result_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="time used"
        android:textSize="50sp"
        />


    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total calories= time used * 3.5 *kg/200"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/return_bt"
        android:text="training finish!"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>